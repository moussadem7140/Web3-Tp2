<!DOCTYPE html>
<html lang="{{ locale }}">

<head>
    <meta charset="utf-8" />
    <title>{{ titre }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/static/favicon.ico" />
    <link href="/static/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="static/css/styles.sass" />
    <script defer
        src="/static/js/utils-ajax.js"> </script>
    {%block script%}
    {% endblock %}
</head>

<body>
    <header>
        <nav class="cc-navbar navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand text-uppercase mx-4 py-3" href="/">
                    ðŸŽ¹ <em>PianoServices</em>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item pe-4">
                            <a class="nav-link active" aria-current="page" href="/">Accueil</a>
                        </li>
                        {% if session.get('identifiant') %}
                        <li class="nav-item pe-4">
                            <a class="nav-link" href="{{ url_for('services.ajouter_service') }}">Ajouter un service</a>
                        </li>
                        {% endif %}
                        {% if session.get('identifiant') and session.get('role') == "admin" %}
                        <li class="nav-item pe-4">
                            <a class="nav-link" href="{{ url_for('compte.ajouter_utilisateur') }}">Ajouter un utilisateur</a>
                        </li>
                        <li class="nav-item pe-4">
                            <a class="nav-link" href="{{ url_for('compte.liste_utilisateurs') }}">Liste des utilisateurs</a>
                        </li>
                        {% endif %}
                        <li class="nav-item pe-4">
                            <a class="nav-link" href="{{ url_for('services.listes_services') }}">Listes des services</a>
                        </li>
                        {% if not session.get('identifiant') %}
                        <li class="nav-item pe-4">
                            <a class="nav-link" href="{{ url_for('compte.se_connecter') }}">Se_connecter</a>
                        </li>
                        {% endif %}
                        {% if session.get('identifiant') %}
                        <li class="nav-item pe-4">
                            <a class="nav-link" href="{{ url_for('compte.se_deconnecter') }}">Se_deconnecter</a>
                        </li>
                        {% endif %}
                    </ul>

                    <div class="d-flex align-items-center ms-lg-3 mt-2 mt-lg-0">
                        <span class="me-2 text-white">Langue:</span>
                        <a href="{{ url_for('services.changer_locale', locale='fr_CA') }}"
                           class="btn btn-sm btn-outline-light me-1">FR</a>
                        <a href="{{ url_for('services.changer_locale', locale='en_CA') }}"
                           class="btn btn-sm btn-outline-light ms-1">EN</a>
                    </div>
                </div>
            </div>
        </nav>
        {%block recherche%}
        {% endblock %}
    </header>

    <main class="container mt-4">
        <h2>{{ titre }}</h2>

        {% with messages = get_flashed_messages(with_categories=True) %}
        {% if messages %}
        <div class="flash-container">
            {% for category, message in messages %}
            <div class="alert alert-{{ category }} d-flex justify-content-between align-items-center" role="alert">
                <span>{{ message }}</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            {% endfor %}
        </div>
        {% endif %}
        {% endwith %}

        {% block contenu %}
        {% endblock %}
    </main>

    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <div class="col-md-4 d-flex align-items-center container">
            <span class="mb-3 mb-md-0 text-body-secondary">
                Â© 2025 - CrÃ©Ã© par Valdess POMBOUH TASSÃ‰ & Moussa DEMBELE
            </span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
